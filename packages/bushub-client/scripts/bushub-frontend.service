[Unit]
Description=Bushub Frontend Web Server
After=network.target bushub-backend.service
Wants=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/bushub/frontend
ExecStart=/usr/bin/python3 -m http.server 8080
Restart=always
RestartSec=5
TimeoutStartSec=30
TimeoutStopSec=30

# 보안 설정
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/bushub/frontend

# 리소스 제한
LimitNOFILE=65536
LimitNPROC=32768

[Install]
WantedBy=multi-user.target
