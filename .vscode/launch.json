{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Frontend (Local)",
      "url": "http://localhost:4173",
      "webRoot": "${workspaceFolder}/packages/bushub-client/frontend/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "/@fs/*": "${workspaceFolder}/*",
        "/src/*": "${workspaceFolder}/packages/bushub-client/frontend/src/*"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Frontend (Docker)",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/packages/bushub-client/frontend/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "/@fs/*": "${workspaceFolder}/*",
        "/src/*": "${workspaceFolder}/packages/bushub-client/frontend/src/*"
      },
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Frontend (Docker Compose)",
      "url": "http://localhost",
      "webRoot": "${workspaceFolder}/packages/bushub-client/frontend/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "/@fs/*": "${workspaceFolder}/*",
        "/src/*": "${workspaceFolder}/packages/bushub-client/frontend/src/*"
      },
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile-compose"
    }
  ]
}
